    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_recipes">

    <fragment
        android:id="@+id/navigation_recipes"
        android:name="com.example.takeeat.ui.recipes.RecipesFragment"
        android:label="@string/title_recipes"
        tools:layout="@layout/fragment_recipes" />

    <fragment
        android:id="@+id/navigation_fridge"
        android:name="com.example.takeeat.ui.fridge.FridgeFragment"
        android:label="@string/title_fridge"
        tools:layout="@layout/fragment_fridge" />

    <fragment
        android:id="@+id/navigation_myrecipes"
        android:name="com.example.takeeat.ui.myrecipes.MyrecipesFragment"
        android:label="@string/title_myrecipes"
        tools:layout="@layout/fragment_myrecipes" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.takeeat.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
