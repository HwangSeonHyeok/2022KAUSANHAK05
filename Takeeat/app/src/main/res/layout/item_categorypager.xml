<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recipefragment_nothingInRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="냉장고에 비어있어요"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/recipefragment_categoryRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recipefragment_categoryRecyclerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipefragment_categoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>