<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OkActivity"
    android:orientation="vertical"
    android:background="@drawable/forgotback">

    <ImageView
        android:src="@drawable/circle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/ok_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="
                가입했던 메일 주소를 입력하고 전송을 눌러주세요\n
                인증 코드 입력 후 재설정할 비밀번호 입력!"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/paw_signUpUsername_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="이메일 주소"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/paw_signUpUsername"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:backgroundTint="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/code_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="인증 코드 전송"
                android:textColor="#ffffff"
                android:backgroundTint ="@color/buttonc"
                android:elevation="40dp"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/paw_code_name_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="인증 코드"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"/>

            <EditText
                android:id="@+id/paw_code_name"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:backgroundTint="#ffffff"
                android:ems="10"
                android:gravity="center"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/new_paw_name_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="새 비밀번호"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/new_paw_name"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:backgroundTint="#ffffff"
                android:ems="10"
                android:gravity="center"
                android:inputType="text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/new_paw_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="확인"
                android:textColor="#ffffff"
                android:backgroundTint ="@color/buttonc"
                android:elevation="40dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>