<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:clickable="true"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/Order_Item_Delete"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:id="@+id/Order_Item_number"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="1"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="조리 방법 입력 후 사진                 아이콘을 눌러서 사진 추가"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/Order_Item_text" android:layout_weight="1"/>
        <ImageView
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_baseline_camera" android:id="@+id/Order_Item_image"
            android:layout_weight="1"/>

    </LinearLayout>
    <View
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#C0C0C0"
        android:layout_width="match_parent"
        android:layout_height="1dp" android:id="@+id/textView12"/>

</LinearLayout>