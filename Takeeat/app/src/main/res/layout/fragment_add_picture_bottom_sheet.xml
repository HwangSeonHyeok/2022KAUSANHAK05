<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_sheet_15dp">

        <View
            android:id="@+id/view_stroke_headline"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/bottomsheet_head_line"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="앨범에서 선택"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:paddingVertical="30dp"
            app:layout_constraintTop_toBottomOf="@id/view_stroke_headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/view_border"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/textview_gallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="사진 촬영"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"
            android:paddingVertical="30dp"
            app:layout_constraintTop_toBottomOf="@id/view_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>